{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "extends": [
    "eslint:recommended", 
    "plugin:prettier/recommended"
  ],
  "eslintIgnore": ["./dist/bundle.js"],
  "rules": {
    "prettier/prettier": ["error", { "endOfLine": "auto" }],
    "no-unused-vars": "warn",
    "semi": "warn"
  },
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "node": true
  }
}
